<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:mde="urn:import:gov.noaa.pmel.sdig.client.widgets">
    <g:HTMLPanel>
        <b:Form ui:field="form">
            <b:FieldSet>
                <b:Heading ui:field="heading" size="H3" text="Enter the Platform Information. You may enter more than one platform."></b:Heading>
                <b:Container width="100%" pull="LEFT">
                    <b:Row>
                        <b:Column size="SM_12">
                            <b:gwt.CellTable ui:field="platforms" addStyleNames="tightenTBmargins" visible="false" bordered="true" condensed="true" striped="true" hover="true"></b:gwt.CellTable>
                        </b:Column>
                    </b:Row>
                    <b:Row>
                        <b:Column size="SM_12">
                            <b:Pagination ui:field="platformPagination" addStyleNames="tightenTBmargins" visible="false" />
                        </b:Column>
                    </b:Row>
                    <b:Row>
                        <b:Column size="SM_6 MD_3">
                            <b:FormGroup>
                                <b:FormLabel for="name" text="Platform Name"></b:FormLabel>
                                <b:Modal closable="true" b:id="modalPlatformName" title="14.1 Platforms may be the research vessels that carry out the research. However, platforms could be something other than a ship (e.g. glider, Argo, etc), or something that is fixed (e.g., moored buoys, towers, etc)."/>
                                <b:Button tabIndex="999" addStyleNames="benone" dataTarget="#modalPlatformName" dataToggle="MODAL" iconSize="NONE" icon="QUESTION_CIRCLE" pull="RIGHT" type="DEFAULT"></b:Button>
                                <b:InputGroup>
                                    <b:SuggestBox ui:field="name" allowBlank="true" placeholder="Platform Name" b:id="Name"></b:SuggestBox>
                                    <b:InputGroupButton>
                                        <b:Button ui:field="showPlatformNameListButton" icon="ANGLE_DOWN" pull="RIGHT" title="Show platform names"></b:Button>
                                    </b:InputGroupButton>
                                </b:InputGroup>
                            </b:FormGroup>
                        </b:Column>
                        <b:Column size="SM_6 MD_3">
                            <b:FormGroup>
                                <b:FormLabel for="platformId" text="Platform ID"></b:FormLabel>
                                <b:Modal closable="true" b:id="modalPlatformID" title="14.3 Platform identifier code and specific  type (e.g. ICES).">
                                    <b:ModalBody>
                                        <g:HTML>
                                            For a list of ICES ship code, please check out this link: <a href="http://vocab.ices.dk" target="_blank">platformlist.txt</a>.
                                        </g:HTML>
                                    </b:ModalBody>
                                </b:Modal>
                                <b:Button tabIndex="999" addStyleNames="benone" dataTarget="#modalPlatformID" dataToggle="MODAL" iconSize="NONE" icon="QUESTION_CIRCLE" pull="RIGHT" type="DEFAULT"></b:Button>
                                <b:TextBox ui:field="platformId" allowBlank="true" placeholder="Platform ID" b:id="platformId"></b:TextBox>
                            </b:FormGroup>
                        </b:Column>

                        <b:Column size="SM_6">
                            <b:FormGroup>
                                <b:FormLabel for="platformIdType" text="Platform ID Type"></b:FormLabel>
                                <b:Modal closable="true" b:id="modalPlatformIdType" title="14.4 Please specify which type of Platform ID was used: ICES, IMO or WMO."/>
                                <b:Button tabIndex="999" addStyleNames="benone" dataTarget="#modalPlatformIdType" dataToggle="MODAL" iconSize="NONE" icon="QUESTION_CIRCLE" pull="RIGHT" type="DEFAULT"></b:Button>
                                <mde:ButtonDropDown ui:field="platformIdType"></mde:ButtonDropDown>
                            </b:FormGroup>
                        </b:Column>
                    </b:Row>
                    <b:Row>
                        <b:Column size="SM_6">
                            <b:FormGroup>
<!--                                <b:FormLabel for="type" text="Platform Type"></b:FormLabel>-->
<!--                                <b:Modal title="15.3 Type of the platform, e.g., research vessel, voluntary observing ships, fishing vessel, cargo ship, mooring, glider, etc." closable="true" b:id="modalPlatformType"/>-->
<!--                                <b:Button tabIndex="999" addStyleNames="benone" dataTarget="#modalPlatformType" dataToggle="MODAL" iconSize="NONE" icon="QUESTION_CIRCLE" pull="RIGHT" type="DEFAULT"></b:Button>-->
<!--                                <b:TextBox ui:field="platformType" allowBlank="true" placeholder="Platform Type" b:id="type"></b:TextBox>-->
                                <b:FormLabel for="type" text="Platform Category"></b:FormLabel>
                                <b:Modal closable="true" b:id="modalPlatformType" title="14.2 Type of the platform, e.g., research vessel, voluntary observing ships, fishing vessel, cargo ship, mooring, glider, etc."/>
                                <b:Button tabIndex="999" addStyleNames="benone" dataTarget="#modalPlatformType" dataToggle="MODAL" iconSize="NONE" icon="QUESTION_CIRCLE" pull="RIGHT" type="DEFAULT"></b:Button>
                                <mde:ButtonDropDown ui:field="platformType"></mde:ButtonDropDown>
                            </b:FormGroup>
                        </b:Column>

                        <b:Column size="SM_6 MD_3">
                            <b:FormGroup>
                                <b:FormLabel for="country" text="Country"></b:FormLabel>
                                <b:Modal closable="true" b:id="modalCountry" title="14.6 Country of the platform owner."/>
                                <b:Button tabIndex="999" addStyleNames="benone" dataTarget="#modalCountry" dataToggle="MODAL" iconSize="NONE" icon="QUESTION_CIRCLE" pull="RIGHT" type="DEFAULT"></b:Button>
                                <b:SuggestBox ui:field="country" allowBlank="true" placeholder="Country" b:id="country"></b:SuggestBox>
                            </b:FormGroup>
                        </b:Column>
                        <b:Column size="SM_6 MD_3">
                            <b:FormGroup>
                                <b:FormLabel for="owner" text="Owner"></b:FormLabel>
                                <b:Modal closable="true" b:id="modalOwner" title="14.5 Owner of the platform."/>
                                <b:Button tabIndex="999" addStyleNames="benone" dataTarget="#modalOwner" dataToggle="MODAL" iconSize="NONE" icon="QUESTION_CIRCLE" pull="RIGHT" type="DEFAULT"></b:Button>
                                <b:TextBox ui:field="owner" allowBlank="true" placeholder="Owner" b:id="owner"></b:TextBox>
                            </b:FormGroup>
                        </b:Column>

                    </b:Row>
                    <b:Row>
                        <b:Column size="SM_2">
                            <b:Button ui:field="save" type="PRIMARY" text="SAVE PLATFORM"/>
                        </b:Column>
                    </b:Row>
                </b:Container>
            </b:FieldSet>
        </b:Form>
    </g:HTMLPanel>
</ui:UiBinder>