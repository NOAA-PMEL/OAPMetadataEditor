<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:b2="urn:import:org.gwtbootstrap3.extras.datepicker.client.ui"
             xmlns:mde="urn:import:gov.noaa.pmel.sdig.client.widgets">
    <g:HTMLPanel>
        <b:Form ui:field="form">
            <b:FieldSet>
                <b:Heading ui:field="heading" size="H3" text="Enter the funding information."></b:Heading>
                <b:Container width="100%" pull="LEFT">
                    <b:Row>
                        <b:Column size="SM_3">
                            <b:FormGroup>
                                <b:FormLabel for="agencyName" text="Agency Name"></b:FormLabel>
                                <b:Popover placement="BOTTOM" trigger="FOCUS" container="body" title="13.1 Funding agency of the data collection. Examples include, National Science Foundation, NOAA's Ocean Acidificaiton Program, etc."
                                           text="13.1 Funding agency of the data collection. Examples include, National Science Foundation, NOAA's Ocean Acidificaiton Program, etc.">
                                    <b:Button tabIndex="999" pull="RIGHT" icon="QUESTION_CIRCLE"></b:Button>
                                </b:Popover>
                                <b:TextBox ui:field="agencyName" allowBlank="true" placeholder="Agency Name" b:id="agencyName"></b:TextBox>
                            </b:FormGroup>
                        </b:Column>
                        <b:Column size="SM_9">
                            <b:FormGroup>
                                <b:FormLabel for="title" text="Project Title"></b:FormLabel>
                                <b:Popover placement="BOTTOM" trigger="FOCUS" container="body" title="13.2 The title of your funded project"
                                           text="13.2 The title of your funded project">
                                    <b:Button tabIndex="999" pull="RIGHT" icon="QUESTION_CIRCLE"></b:Button>
                                </b:Popover>
                                <b:TextBox ui:field="title" allowBlank="true" placeholder="Project Title" b:id="title"></b:TextBox>
                            </b:FormGroup>
                        </b:Column>
                    </b:Row>
                    <b:Row>
                        <b:Column size="SM_4">
                            <b:FormGroup>
                                <b:FormLabel for="grantNumber" text="Grant Number"></b:FormLabel>
                                <b:Popover trigger="FOCUS" container="body" title="13.3 The ID of your funded project"
                                           text="13.3 The ID of your funded project">
                                    <b:Button tabIndex="999" pull="RIGHT" icon="QUESTION_CIRCLE"></b:Button>
                                </b:Popover>
                                <b:TextBox ui:field="grantNumber" allowBlank="true" placeholder="Grant Number" b:id="grantNumber"></b:TextBox>
                            </b:FormGroup>
                        </b:Column>
                    </b:Row>
                    <b:Row>
                        <b:Column size="SM_2">
                            <b:Button ui:field="save" type="PRIMARY" text="NEXT"/>
                        </b:Column>
                    </b:Row>
                </b:Container>
            </b:FieldSet>
        </b:Form>
    </g:HTMLPanel>
</ui:UiBinder>