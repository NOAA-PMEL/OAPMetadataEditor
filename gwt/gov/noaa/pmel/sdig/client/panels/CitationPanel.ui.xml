<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:b2="urn:import:org.gwtbootstrap3.extras.datepicker.client.ui"
             xmlns:mde="urn:import:gov.noaa.pmel.sdig.client.widgets">
    <g:HTMLPanel>
        <b:Form ui:field="form">
            <b:FieldSet>
                <b:Heading ui:field="heading" size="H3" text="Enter the information about this citation."></b:Heading>
                <b:Container width="100%" pull="LEFT">
                    <b:Row>
                        <b:Column size="SM_12">
                            <b:FormGroup>
                                <b:FormLabel for="title" text="Title"></b:FormLabel>
                                <b:Popover trigger="FOCUS" container="body" title="5 Provide a descriptive title for the data set." text="5 Provide a descriptive title for the data set.">
                                    <b:Button icon="QUESTION_CIRCLE" pull="RIGHT"></b:Button>
                                </b:Popover>
                                <b:TextBox ui:field="title" allowBlank="false" placeholder="Title" b:id="title"></b:TextBox>
                            </b:FormGroup>
                        </b:Column>
                    </b:Row>
                    <b:Row>
                        <b:Column size="SM_12">
                            <b:FormGroup>
                                <b:FormLabel for="platformAbstract" text="Abstract"></b:FormLabel>
                                <b:Popover trigger="FOCUS" container="body" title="6 A narrative summary of the data set." text="6 A narrative summary of the data set.">
                                    <b:Button pull="RIGHT" icon="QUESTION_CIRCLE"></b:Button>
                                </b:Popover>
                                <b:TextArea ui:field="platformAbstract" visibleLines="6" allowBlank="false" placeholder="Abstract" b:id="platformAbstract"></b:TextArea>
                            </b:FormGroup>
                        </b:Column>
                    </b:Row>
                    <b:Row>
                        <b:Column size="SM_12">
                            <b:FormGroup>
                                <b:FormLabel for="purpose" text="Purpose"></b:FormLabel>
                                <b:Popover trigger="FOCUS" container="body" title="7 A summary of the intentions with which the data set was developed." text="7 A summary of the intentions with which the data set was developed.">
                                    <b:Button pull="RIGHT" icon="QUESTION_CIRCLE"></b:Button>
                                </b:Popover>
                                <b:TextBox ui:field="purpose" allowBlank="true" placeholder="Purpose" b:id="purpose"></b:TextBox>
                            </b:FormGroup>
                        </b:Column>
                    </b:Row>
                    <b:Row>
                        <b:Column size="SM_12">
                            <b:FormGroup>
                                <b:FormLabel for="researchProjects" text="Research Projects"></b:FormLabel>
                                <b:Popover trigger="FOCUS" container="body" title="14 Project refers to the collaborative research effort, which the data collection is part of . For example, U.S. Joint Global Ocean Flux Study (U.S. JGOFS) is a project."
                                           text="14 Project refers to the collaborative research effort, which the data collection is part of . For example, U.S. Joint Global Ocean Flux Study (U.S. JGOFS) is a project.">
                                    <b:Button pull="RIGHT" icon="QUESTION_CIRCLE"></b:Button>
                                </b:Popover>
                                <b:TextBox ui:field="researchProjects" allowBlank="true" placeholder="Research Projects" b:id="researchProjects"></b:TextBox>
                            </b:FormGroup>
                        </b:Column>
                    </b:Row>
                    <b:Row>
                        <b:Column size="SM_2">
                            <b:FormGroup>
                                <b:FormLabel for="expocode" text="EXPOCODE"></b:FormLabel>
                                <b:Popover trigger="FOCUS" container="body" title="16 Expedition code consists of the four digit ICES ship code, and the date of the first day of the cruise in the format of YYYYMMDD."
                                           text="16 Expedition code consists of the four digit ICES ship code, and the date of the first day of the cruise in the format of YYYYMMDD.">
                                    <b:Button pull="RIGHT" icon="QUESTION_CIRCLE"></b:Button>
                                </b:Popover>
                                <b:TextBox ui:field="expocode" allowBlank="false" placeholder="EXPOCODE" b:id="expocode"></b:TextBox>
                            </b:FormGroup>
                        </b:Column>
                        <b:Column size="SM_2">
                            <b:FormGroup>

                                <b:FormLabel for="cruiseId" text="Cruise ID"></b:FormLabel>
                                <b:Popover trigger="FOCUS" container="body" title="17 Cruise ID is the particular ship cruise number (e.g., MT901), or other alias for the cruise. For example, the cruise ID (e.g., A16N_2013) could consist of a Section ID (e.g., A16N), and the sampling year (e.g., 2013)."
                                           text="17 Cruise ID is the particular ship cruise number (e.g., MT901), or other alias for the cruise. For example, the cruise ID (e.g., A16N_2013) could consist of a Section ID (e.g., A16N), and the sampling year (e.g., 2013).">
                                    <b:Button pull="RIGHT" icon="QUESTION_CIRCLE"></b:Button>
                                </b:Popover>
                                <b:TextBox ui:field="cruiseId" allowBlank="false" placeholder="Cruise ID" b:id="cruiseId"></b:TextBox>
                            </b:FormGroup>
                        </b:Column>
                        <b:Column size="SM_2">
                            <b:FormGroup>
                                <b:FormLabel for="section" text="Section"></b:FormLabel>
                                <b:Popover trigger="FOCUS" container="body" title="18 Section ID is the identification number for a research cruise section or leg. It was commonly used during the World Ocean Circulation Experiment (WOCE) studies, which often had many repeating cruises on a single section, e.g., A16N."
                                           text="18 Section ID is the identification number for a research cruise section or leg. It was commonly used during the World Ocean Circulation Experiment (WOCE) studies, which often had many repeating cruises on a single section, e.g., A16N.">
                                    <b:Button pull="RIGHT" icon="QUESTION_CIRCLE"></b:Button>
                                </b:Popover>
                                <b:TextBox ui:field="section" allowBlank="true" placeholder="Section" b:id="section"></b:TextBox>
                            </b:FormGroup>
                        </b:Column>
                    </b:Row>
                    <b:Row>
                        <b:Column size="SM_12">
                            <b:FormGroup>
                                <b:FormLabel for="citationAuthorList" text="List of authors for citation"></b:FormLabel>
                                <b:Popover trigger="FOCUS" container="body" title="19 Please provide the list of authors in their correct order for the creation of data citation for this data set. We recommend the format of Lastname1, Firstname1, Middlename1; Lastname2, Firstname2, Middlename2; … for this field."
                                           text="19 Please provide the list of authors in their correct order for the creation of data citation for this data set. We recommend the format of Lastname1, Firstname1, Middlename1; Lastname2, Firstname2, Middlename2; … for this field.">
                                    <b:Button pull="RIGHT" icon="QUESTION_CIRCLE"></b:Button>
                                </b:Popover>
                                <b:TextBox ui:field="citationAuthorList" allowBlank="false" placeholder="List of authors for citation (LastName, FirstName, MI; LastName, FirstName, MI" b:id="citationAuthorList"></b:TextBox>
                            </b:FormGroup>
                        </b:Column>
                    </b:Row>
                    <b:Row>
                        <b:Column size="SM_12">
                            <b:FormGroup>
                                <b:FormLabel for="references" text="References"></b:FormLabel>
                                <b:Popover trigger="FOCUS" container="body" title="20 References are bibliographic citations of publications or cruise reports, etc, describing the data set."
                                           text="20 References are bibliographic citations of publications or cruise reports, etc, describing the data set.">
                                    <b:Button pull="RIGHT" icon="QUESTION_CIRCLE"></b:Button>
                                </b:Popover>
                                <b:TextBox ui:field="references" allowBlank="false" placeholder="References" b:id="references"></b:TextBox>
                            </b:FormGroup>
                        </b:Column>
                    </b:Row>
                    <b:Row>
                        <b:Column size="SM_12">
                            <b:FormGroup>
                                <b:FormLabel for="supplementalInformation" text="Supplimental Information"></b:FormLabel>
                                <b:Popover trigger="FOCUS" container="body" title="21 Any additional information that is critical to the understanding of the data set, but does not fit into other existing fields."
                                           text="21 Any additional information that is critical to the understanding of the data set, but does not fit into other existing fields.">
                                    <b:Button pull="RIGHT" icon="QUESTION_CIRCLE"></b:Button>
                                </b:Popover>
                                <b:TextBox ui:field="supplementalInformation" allowBlank="false" placeholder="Supplimental Information" b:id="supplementalInformation"></b:TextBox>
                            </b:FormGroup>
                        </b:Column>
                    </b:Row>
                    <b:Row>
                        <b:Column size="SM_2">
                            <b:Button ui:field="save" type="PRIMARY" text="SAVE"/>
                        </b:Column>
                    </b:Row>
                </b:Container>
            </b:FieldSet>
        </b:Form>
    </g:HTMLPanel>
</ui:UiBinder>