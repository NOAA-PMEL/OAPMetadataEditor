<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:mdep="urn:import:gov.noaa.pmel.sdig.client.panels">
    <g:HTMLPanel>
        <!--

012 DIC: Standardization technique description
013 DIC: Frequency of standardization
014 DIC: CRM manufacturer
015 DIC: Batch number
017 DIC: How were the samples preserved (HgCl2, or others)
018 DIC: Concentration and amount of the preservative
019 DIC: Preservative correction description

        -->
        <b:Form ui:field="form">
            <mdep:CommonVariablePanel ui:field="common"></mdep:CommonVariablePanel>
            <b:FieldSet>
                <b:Container width="100%" pull="LEFT">
                    <b:Row>
                        <b:Column size="SM_12 MD_9">
                            <b:FormGroup ui:field="standardizationTechniqueForm"><!-- Calibration method -->
                                <!-- Keep -->
                                <b:FormLabel for="standardizationTechnique" ui:field="standardizationTechniqueLabel" text="Calibration Method"></b:FormLabel>
                                <b:Modal closable="true" b:id="modalStandardizationTechnique" title="20.12 Description of the calibration procedure."/>
                                <b:Button tabIndex="999" addStyleNames="benone" dataTarget="#modalStandardizationTechnique" dataToggle="MODAL" iconSize="NONE" icon="QUESTION_CIRCLE" pull="RIGHT" type="DEFAULT"></b:Button>
                                <b:TextBox ui:field="standardizationTechnique" allowBlank="true" placeholder="Calibration method" b:id="standardizationTechnique"></b:TextBox>
                            </b:FormGroup>
                        </b:Column>
                    </b:Row>
                    <b:Row>
                        <b:Column size="MD_4 LG_3">
                            <b:FormGroup ui:field="freqencyOfStandardizationForm"><!-- Frequency of calibration -->
                                <!-- Keep -->
                                <b:FormLabel for="freqencyOfStandardization" ui:field="freqencyOfStandardizationLabel" text="Frequency of Calibration"></b:FormLabel>
                                <b:Modal closable="true" b:id="modalFrequencyOfStandardization" title="20.13 How frequently was the calibration carried out, e.g., every 6 hours, after every 10 samples, etc."/>
                                <b:Button tabIndex="999" addStyleNames="benone" dataTarget="#modalFrequencyOfStandardization" dataToggle="MODAL" iconSize="NONE" icon="QUESTION_CIRCLE" pull="RIGHT" type="DEFAULT"></b:Button>
                                <b:TextBox ui:field="freqencyOfStandardization" allowBlank="true" placeholder="Frequency of calibration" b:id="freqencyOfStandardization"></b:TextBox>
                            </b:FormGroup>
                        </b:Column>
                        <b:Column size="MD_4 LG_4" offset="LG_1">
                            <b:FormGroup ui:field="crmManufactureForm">
                                <!-- Keep -->
                                <b:FormLabel for="crmManufacture" text="CRM Manufacture"></b:FormLabel>
                                <b:Modal closable="true" b:id="modalCRMManufacture" title="20.14 Manufacturer of the Certified Reference Material (CRM), e.g., Andrew Dickson's lab at Scripps Institute of Oceanography."/>
                                <b:Button tabIndex="999" addStyleNames="benone" dataTarget="#modalCRMManufacture" dataToggle="MODAL" iconSize="NONE" icon="QUESTION_CIRCLE" pull="RIGHT" type="DEFAULT"></b:Button>
                                <b:TextBox ui:field="crmManufacture" allowBlank="true" placeholder="CRM Manufacture" b:id="crmManufacture"></b:TextBox>
                            </b:FormGroup>
                        </b:Column>
                        <b:Column size="MD_4 LG_3" offset="LG_1">
                            <b:FormGroup ui:field="batchNumberForm">
                                <!-- Keep -->
                                <b:FormLabel for="batchNumber" text="Batch Number"></b:FormLabel>
                                <b:Modal title="20.15 Batch numbers of the CRMs that were used to calibrate the instrument. If multiple CRM batches were used please state this by indicating 'several' in this line." closable="true" b:id="modalBatchNumber"/>
                                <b:Button tabIndex="999" addStyleNames="benone" dataTarget="#modalBatchNumber" dataToggle="MODAL" iconSize="NONE" icon="QUESTION_CIRCLE" pull="RIGHT" type="DEFAULT"></b:Button>
                                <b:TextBox ui:field="batchNumber" allowBlank="true" placeholder="Batch Number" b:id="batchNumber"></b:TextBox>
                            </b:FormGroup>
                        </b:Column>
                    </b:Row>
                    <b:Row>
                        <b:Column size="SM_6 LG_4"> <!-- b:Column size="MD_4 LG_3" -->
                            <b:FormGroup ui:field="poisonForm"><!-- Poison used to kill the sample -->
                                <!-- Keep -->
                                <b:FormLabel for="poison" ui:field="poisonLabel" text="How were the samples preserved? (HgCl2, or others)"></b:FormLabel>
                                <b:Modal closable="true" b:id="modalPoison" title="20.16 As described, e.g., Mercuric Chloride."/>
                                <b:Button tabIndex="999" addStyleNames="benone" dataTarget="#modalPoison" dataToggle="MODAL" iconSize="NONE" icon="QUESTION_CIRCLE" pull="RIGHT" type="DEFAULT"></b:Button>
                                <b:TextBox ui:field="poison" allowBlank="true" placeholder="How were the samples preserved (HgCl2, or others)" b:id="poison"></b:TextBox>
                            </b:FormGroup>
                        </b:Column>
                        <b:Column size="SM_6 LG_4"> <!-- b:Column size="SM_6 LG_4" offset="LG_1" -->
                            <b:FormGroup ui:field="poisonVolumeForm"><!-- Poison volume -->
                                <!-- Keep -->
                                <b:FormLabel for="poisonVolume" ui:field="poisonVolumeLabel" text="Concentration and Amount of the Preservative"></b:FormLabel>
                                <b:Modal closable="true" b:id="modalPoisonVolume" title="20.17 How much preservative is added to each sample to eliminate the microbes. For example, 20 Î¼L Mercuric Chloride is added to 500 mL samples. Please state the concentration of the preservative solution used, e.g 2%."/>
                                <b:Button tabIndex="999" addStyleNames="benone" dataTarget="#modalPoisonVolume" dataToggle="MODAL" iconSize="NONE" icon="QUESTION_CIRCLE" pull="RIGHT" type="DEFAULT"></b:Button>
                                <b:TextBox ui:field="poisonVolume" allowBlank="true" placeholder="Concentration and amount of the preservative added" b:id="poisonVolume"></b:TextBox>
                            </b:FormGroup>
                        </b:Column>
                        <b:Column size="SM_6 LG_4">
                            <b:FormGroup ui:field="poisonDescriptionForm"><!-- Poisoning correction description -->
                                <!-- Keep -->
                                <b:FormLabel for="poisonDescription" ui:field="poisonDescriptionLabel" text="Preservative Correction Description"></b:FormLabel>
                                <b:Modal title="20.18 Please specify whether the reported variables were corrected for preservative usage, and if so, how they were corrected." closable="true" b:id="modalPoisonDescription"/>
                                <b:Button tabIndex="999" addStyleNames="benone" dataTarget="#modalPoisonDescription" dataToggle="MODAL" iconSize="NONE" icon="QUESTION_CIRCLE" pull="RIGHT" type="DEFAULT"></b:Button>
                                <b:TextBox ui:field="poisonDescription" allowBlank="true" placeholder="Preservative correction description" b:id="poisonDescription"></b:TextBox>
                            </b:FormGroup>
                        </b:Column>
                    </b:Row>
                    <b:Row>
                        <b:Column size="SM_2">
                            <b:Button ui:field="save" type="PRIMARY" text="SAVE DIC"/>
                        </b:Column>
                    </b:Row>
                </b:Container>
            </b:FieldSet>
        </b:Form>
    </g:HTMLPanel>
</ui:UiBinder>