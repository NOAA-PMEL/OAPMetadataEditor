<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:b2="urn:import:org.gwtbootstrap3.extras.datepicker.client.ui"
             xmlns:mde="urn:import:gov.noaa.pmel.sdig.client.widgets">
    <g:HTMLPanel>
        <b:Form ui:field="form">
            <b:FieldSet>
                <b:Heading ui:field="heading" size="H3" text="Enter the funding information."></b:Heading>
                <b:Container width="100%" pull="LEFT">
                    <b:Row>
                        <b:Column size="SM_3">
                            <b:FormGroup>
                                <b:FormLabel for="agencyName" text="Agency Name"></b:FormLabel>
                                <b:TextBox ui:field="agencyName" allowBlank="false" placeholder="Agency Name" b:id="agencyName"></b:TextBox>
                            </b:FormGroup>
                        </b:Column>
                        <b:Column size="SM_9">
                            <b:FormGroup>
                                <b:FormLabel for="title" text="Project Title"></b:FormLabel>
                                <b:TextBox ui:field="title" allowBlank="false" placeholder="Project Title" b:id="title"></b:TextBox>
                            </b:FormGroup>
                        </b:Column>
                    </b:Row>
                    <b:Row>
                        <b:Column size="SM_4">
                            <b:FormGroup>
                                <b:FormLabel for="grandNumber" text="Grant Number"></b:FormLabel>
                                <b:TextBox ui:field="grandNumber" allowBlank="false" placeholder="Grant Number" b:id="grantNumber"></b:TextBox>
                            </b:FormGroup>
                        </b:Column>
                    </b:Row>
                    <b:Row>
                        <b:Column size="SM_2">
                            <b:Button ui:field="save" type="PRIMARY" text="SAVE"/>
                        </b:Column>
                    </b:Row>
                </b:Container>
            </b:FieldSet>
        </b:Form>
    </g:HTMLPanel>
</ui:UiBinder>