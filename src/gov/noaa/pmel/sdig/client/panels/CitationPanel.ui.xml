<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:b2="urn:import:org.gwtbootstrap3.extras.datepicker.client.ui"
             xmlns:mde="urn:import:gov.noaa.pmel.sdig.client.widgets">
    <g:HTMLPanel>
        <b:Form ui:field="form">
            <b:FieldSet>
                <b:Heading ui:field="heading" size="H3" text="Enter the information about this citation."></b:Heading>
                <b:Container width="100%" pull="LEFT">
                    <b:Row>
                        <b:Column size="SM_12">
                            <b:FormGroup>
                                <b:FormLabel for="title" text="Title"></b:FormLabel>
                                <b:TextBox ui:field="title" allowBlank="false" placeholder="Title" b:id="title"></b:TextBox>
                            </b:FormGroup>
                        </b:Column>
                    </b:Row>
                    <b:Row>
                        <b:Column size="SM_12">
                            <b:FormGroup>
                                <b:FormLabel for="platformAbstract" text="Abstract"></b:FormLabel>
                                <b:TextArea ui:field="platformAbstract" visibleLines="6" allowBlank="false" placeholder="Abstract" b:id="platformAbstract"></b:TextArea>
                            </b:FormGroup>
                        </b:Column>
                    </b:Row>
                    <b:Row>
                        <b:Column size="SM_12">
                            <b:FormGroup>
                                <b:FormLabel for="purpose" text="Purpose"></b:FormLabel>
                                <b:TextBox ui:field="purpose" allowBlank="true" placeholder="Purpose" b:id="purpose"></b:TextBox>
                            </b:FormGroup>
                        </b:Column>
                    </b:Row>
                    <b:Row>
                        <b:Column size="SM_12">
                            <b:FormGroup>
                                <b:FormLabel for="researchProjects" text="Research Projects"></b:FormLabel>
                                <b:TextBox ui:field="researchProjects" allowBlank="true" placeholder="Research Projects" b:id="researchProjects"></b:TextBox>
                            </b:FormGroup>
                        </b:Column>
                    </b:Row>
                    <b:Row>
                        <b:Column size="SM_2">
                            <b:FormGroup>
                                <b:FormLabel for="expocode" text="EXPOCODE"></b:FormLabel>
                                <b:TextBox ui:field="expocode" allowBlank="false" placeholder="EXPOCODE" b:id="expocode"></b:TextBox>
                            </b:FormGroup>
                        </b:Column>
                        <b:Column size="SM_2">
                            <b:FormGroup>
                                <b:FormLabel for="cruiseId" text="Cruise ID"></b:FormLabel>
                                <b:TextBox ui:field="cruiseId" allowBlank="false" placeholder="Cruise ID" b:id="cruiseId"></b:TextBox>
                            </b:FormGroup>
                        </b:Column>
                        <b:Column size="SM_2">
                            <b:FormGroup>
                                <b:FormLabel for="section" text="Section"></b:FormLabel>
                                <b:TextBox ui:field="section" allowBlank="true" placeholder="Section" b:id="section"></b:TextBox>
                            </b:FormGroup>
                        </b:Column>
                    </b:Row>
                    <b:Row>
                        <b:Column size="SM_12">
                            <b:FormGroup>
                                <b:FormLabel for="citationAuthorList" text="List of authors for citation"></b:FormLabel>
                                <b:TextBox ui:field="citationAuthorList" allowBlank="false" placeholder="List of authors for citation (LastName, FirstName, MI; LastName, FirstName, MI" b:id="citationAuthorList"></b:TextBox>
                            </b:FormGroup>
                        </b:Column>
                    </b:Row>
                    <b:Row>
                        <b:Column size="SM_12">
                            <b:FormGroup>
                                <b:FormLabel for="references" text="References"></b:FormLabel>
                                <b:TextBox ui:field="references" allowBlank="false" placeholder="References" b:id="references"></b:TextBox>
                            </b:FormGroup>
                        </b:Column>
                    </b:Row>
                    <b:Row>
                        <b:Column size="SM_12">
                            <b:FormGroup>
                                <b:FormLabel for="supplementalInformation" text="Supplimental Information"></b:FormLabel>
                                <b:TextBox ui:field="supplementalInformation" allowBlank="false" placeholder="Supplimental Information" b:id="supplementalInformation"></b:TextBox>
                            </b:FormGroup>
                        </b:Column>
                    </b:Row>
                    <b:Row>
                        <b:Column size="SM_2">
                            <b:Button ui:field="save" type="PRIMARY" text="SAVE"/>
                        </b:Column>
                    </b:Row>
                </b:Container>
            </b:FieldSet>
        </b:Form>
    </g:HTMLPanel>
</ui:UiBinder>