<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:b2="urn:import:org.gwtbootstrap3.extras.datepicker.client.ui"
             xmlns:mde="urn:import:gov.noaa.pmel.sdig.client.widgets">
    <g:HTMLPanel>
        <b:Form ui:field="form">
            <b:FieldSet>
                <b:Heading ui:field="heading" size="H3" text="Enter the information about this platform."></b:Heading>
                <b:Container width="100%" pull="LEFT">
                    <b:Row>
                        <b:Column size="SM_12">
                            <b:FormGroup>
                                <b:FormLabel for="title" text="Title"></b:FormLabel>
                                <b:TextBox ui:field="title" allowBlank="false" placeholder="Title" b:id="title"></b:TextBox>
                            </b:FormGroup>
                        </b:Column>
                    </b:Row>
                    <b:Row>
                        <b:Column size="SM_12">
                            <b:FormGroup>
                                <b:FormLabel for="platformAbstract" text="Abstract"></b:FormLabel>
                                <b:TextArea ui:field="platformAbstract" visibleLines="10" allowBlank="false" placeholder="Abstract" b:id="platformAbstract"></b:TextArea>
                            </b:FormGroup>
                        </b:Column>
                    </b:Row>
                    <b:Row>
                        <b:Column size="SM_12">
                            <b:FormGroup>
                                <b:FormLabel for="purpose" text="Purpose"></b:FormLabel>
                                <b:TextBox ui:field="purpose" allowBlank="false" placeholder="Purpose" b:id="purpose"></b:TextBox>
                            </b:FormGroup>
                        </b:Column>
                    </b:Row>
                    <b:Row>
                        <b:Column size="SM_2">
                            <b:FormGroup>
                                <b:FormLabel for="startDate" text="Start Date"></b:FormLabel>
                                <b2:DatePicker ui:field="startDate" allowBlank="false" placeholder="MM/DD/YYYY " b:id="startDate"></b2:DatePicker>
                            </b:FormGroup>
                        </b:Column>
                        <b:Column size="SM_2">
                            <b:FormGroup>
                                <b:FormLabel for="endDate" text="End Date"></b:FormLabel>
                                <b2:DatePicker ui:field="endDate" allowBlank="false" placeholder="MM/DD/YYYY " b:id="endDate"></b2:DatePicker>
                            </b:FormGroup>
                        </b:Column>
                    </b:Row>
                    <b:Row>
                        <b:Column size="SM_2">
                            <b:Button ui:field="save" type="PRIMARY" text="SAVE"/>
                        </b:Column>
                    </b:Row>
                </b:Container>
            </b:FieldSet>
        </b:Form>
    </g:HTMLPanel>
</ui:UiBinder>