<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:mde="urn:import:gov.noaa.pmel.sdig.client.widgets">
	<ui:style>
	/* Add CSS here. See the GWT docs on UI Binder for more details */
	.important {
		font-weight: bold;
	}
	</ui:style>
	<g:HTMLPanel>
	 <mde:CustomTextBox ui:field="title" title="Title" hint="Enter the data title" defaultText="Title" length="100"></mde:CustomTextBox>
	 <g:TextArea ui:field="abstractEntry"></g:TextArea>
	 <mde:CustomTextBox ui:field="purpose" title="Purpose" hint="The purpose these data were collected" defaultText="Purpose" length="100"></mde:CustomTextBox>
	</g:HTMLPanel>
</ui:UiBinder> 